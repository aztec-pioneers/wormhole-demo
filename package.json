{
  "name": "aztec-wormhole-demo",
  "version": "1.0.0",
  "description": "Simplified cross-chain messaging demo between Aztec and EVM using Wormhole",
  "type": "module",
  "authors": [
    "Aztec Pioneers <https://github.com/aztec-pioneers>",
    "Nethermind <https://github.com/nethermindeth>"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aztec-pioneers/wormhole-demo.git"
  },
  "scripts": {
    "postinstall": "git submodule update --init --recursive && cd packages/evm && forge install",
    "build": "pnpm run build:aztec && pnpm run build:evm && pnpm run build:solana",
    "build:aztec": "tsx scripts/buildAztec.ts",
    "build:evm": "cd packages/evm && forge build --skip test",
    "build:solana": "cd packages/solana/message_bridge && anchor build",
    "create-relayer-account": "tsx scripts/setupRelayerAccount.ts",
    "deploy:arbitrum": "tsx scripts/deployEVM.ts --chain=arbitrum",
    "deploy:base": "tsx scripts/deployEVM.ts --chain=base",
    "deploy:aztec": "tsx scripts/deployAztec.ts",
    "deploy:solana": "tsx scripts/deploySolana.ts",
    "deploy:all": "tsx scripts/deployEVM.ts --all && pnpm run deploy:aztec && pnpm run deploy:solana",
    "register-emitters": "tsx scripts/registerEmitters.ts",
    "read:emitters": "tsx scripts/readEmitters.ts",
    "send": "tsx scripts/send.ts",
    "read:values": "tsx scripts/readValues.ts",
    "relayer": "docker compose up"
  },
  "dependencies": {
    "@aztec-wormhole-demo/aztec-sdk": "workspace:*",
    "@aztec-wormhole-demo/solana-sdk": "workspace:^",
    "@aztec-wormhole-demo/evm-sdk": "workspace:^",
    "@aztec-wormhole-demo/shared": "workspace:*",
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.0",
    "bs58": "^6.0.0"
  },
  "devDependencies": {
    "tsx": "^4.19.2"
  },
  "packageManager": "pnpm@9.15.4"
}
