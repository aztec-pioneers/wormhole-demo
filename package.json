{
  "name": "aztec-wormhole-demo",
  "version": "1.0.0",
  "description": "Simplified cross-chain messaging demo between Aztec and EVM using Wormhole",
  "private": true,
  "scripts": {
    "build": "pnpm run build:aztec && pnpm run build:evm",
    "build:aztec": "pnpm --filter @aztec-wormhole-demo/aztec-contracts build",
    "build:evm": "pnpm --filter @aztec-wormhole-demo/evm build",
    "build:relayer": "cd packages/relayer && go build -o bin/wormhole-relayer .",
    "build:vaa-service": "docker build -f packages/aztec/ts/vaaService/Dockerfile -t wormhole-vaa-service .",
    "vaa-service": "docker run --rm -p 3000:3000 --env-file packages/aztec/.env wormhole-vaa-service",
    "deploy:evm": "pnpm --filter @aztec-wormhole-demo/aztec-contracts deploy:evm",
    "deploy:aztec": "pnpm --filter @aztec-wormhole-demo/aztec-contracts setup:deploy",
    "configure": "pnpm --filter @aztec-wormhole-demo/aztec-contracts setup:configure",
    "send-to-aztec": "pnpm --filter @aztec-wormhole-demo/aztec-contracts send:evm",
    "send-to-evm": "pnpm --filter @aztec-wormhole-demo/aztec-contracts send",
    "read": "pnpm --filter @aztec-wormhole-demo/aztec-contracts read",
    "check:emitters": "pnpm --filter @aztec-wormhole-demo/aztec-contracts check:emitters",
    "sandbox": "docker compose up"
  },
  "packageManager": "pnpm@9.15.4",
  "keywords": [
    "aztec",
    "wormhole",
    "cross-chain",
    "bridge",
    "evm",
    "arbitrum"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/wormhole-demo.git"
  }
}
