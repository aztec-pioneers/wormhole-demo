{
  "name": "wormhole-demo",
  "version": "1.0.0",
  "description": "Simplified cross-chain messaging demo between Aztec and EVM using Wormhole",
  "private": true,
  "scripts": {
    "build": "pnpm run build:aztec && pnpm run build:evm",
    "build:aztec": "pnpm --filter @wormhole-demo/aztec build",
    "build:evm": "pnpm --filter @wormhole-demo/evm build",
    "build:relayer": "cd packages/relayer && go build -o bin/wormhole-relayer .",
    "deploy:evm": "pnpm --filter @wormhole-demo/aztec deploy:evm",
    "deploy:aztec": "pnpm --filter @wormhole-demo/aztec setup:deploy",
    "configure": "pnpm --filter @wormhole-demo/aztec setup:configure",
    "send": "pnpm --filter @wormhole-demo/aztec send",
    "send:evm": "pnpm --filter @wormhole-demo/aztec send:evm",
    "read": "pnpm --filter @wormhole-demo/aztec read",
    "sandbox": "docker compose up"
  },
  "packageManager": "pnpm@9.15.4",
  "keywords": [
    "aztec",
    "wormhole",
    "cross-chain",
    "bridge",
    "evm",
    "arbitrum"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/wormhole-demo.git"
  }
}
